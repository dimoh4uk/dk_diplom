mixin listCard(model)
    .box
        .columns
            .column
                a(href=model.detailLink).posts__img
                    figure
                        img(src=model.photoLink)
            .column
                .posts__content
                    .title.is-5
                        a(href=model.detailLink)= model.name
                    .item
                        | Врема проведения:
                        time= model.date
                    .item Ограничение: #{model.limitations}
                    .item Цена: #{model.price}

                    a(href=model.detailLink).button Подробнее