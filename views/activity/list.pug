extends ../layout
include ./mixins/list-card

mixin activitCard(model)
    .posts
        a(href=model.de).posts__img
            figure
                img(src=model.photoLink width="460" height="396")
        .posts__content
            .title.is-5
                a(href="#")= model.name
            time= model.date


block content
    .container
        .columns.is-multiline
            each item in activities
                .column.is-4
                    +listCard(item)
