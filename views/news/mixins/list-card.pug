mixin listCard(model)
    .card.activity
        a.block-link(href=model.detailLink)
        .card-image
            figure.image.is-3by2
                img(src=model.photoLink)
        .card-content
            .activity__title= model.name
            time= model.date
            .activity__read
                .activity__dot
                a(href=model.detailLink).activity__more Читать дальше
                    span.material-icons arrow_forward
